---
import type { MarkdownLayoutProps } from "astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Breadcrumb from "@/components/Breadcrumb.astro";
import Layout from "./Layout.astro";
import { SITE } from "@/config";
import { SOCIALS } from "@/constants";

type Props = MarkdownLayoutProps<{ title: string; description?: string }>;

const { frontmatter } = Astro.props;

const personSchema = {
  "@context": "https://schema.org",
  "@type": "Person",
  name: SITE.author,
  url: SITE.website,
  jobTitle: "Backend Engineer",
  description: frontmatter.description ?? SITE.desc,
  sameAs: SOCIALS.filter(s => s.name !== "Mail").map(s => s.href),
};
---

<Layout
  title={`${frontmatter.title} | ${SITE.title}`}
  description={frontmatter.description}
  structuredData={personSchema}
>
  <Header />
  <Breadcrumb />
  <main id="main-content" class="app-layout">
    <section id="about" class="app-prose mb-28 max-w-app prose-img:border-0">
      <h1 class="text-2xl tracking-wider sm:text-3xl">{frontmatter.title}</h1>
      <slot />
    </section>
  </main>
  <Footer />
</Layout>
